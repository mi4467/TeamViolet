                    android:id="@+id/onTime_week_graph_filter" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardBackgroundColor="@color/cardview_secondary_bgcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:weightSum="3"
                            >
                            <TextView
                                android:text="LEGEND"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="Total Tasks"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:id="@+id/onTime_complete_key_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:text="On Time Tasks"
                                android:id="@+id/onTime_key_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:text="Late Tasks"
                                android:id="@+id/late_key_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_margin="5dp"
                        card_view:cardCornerRadius="4dp"
                        android:layout_width="match_parent"
                        card_view:cardBackgroundColor="@color/cardview_secondary_bgcolor"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding = "10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="FILTER"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <Button
                                    android:text="Choose Week"
                                    android:id="@+id/filterOnTimeWeekButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:text="Enter"
                                    android:id="@+id/filterOnTimeWeekEnter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


